<HomeScreen>:
    Screen:
        BoxLayout:
            orientation: 'vertical'
            size_hint: .4,.4
            height: self.minimum_height
            pos_hint: {"center_x": .5,"center_y": .6 }
            padding:"30dp","15dp","30dp","30dp"
            spacing:"5dp"
            
            canvas:
                Color: 
                    rgba: 1,1,1, .3
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius: 20,20,20,20
            
            BoxLayout:
                orientation:'vertical'
                size_hint_y:.2
                MDLabel:
                    id:hora_actual
                    font_style:'H2'
                    halign: "center"
                    bold:False
                    color_text: 0,0,0,0
